---
import Navigation from "../komponenter/Navigation.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Lora&family=Merriweather&family=Nunito+Sans:wght@200;400&family=Oswald&family=Prosto+One&family=Quicksand:wght@300&family=Roboto+Condensed&display=swap" rel="stylesheet" />
    <title>Program</title>
  </head>
  <body>
    <Navigation />
    <main>
      <h1 class="overskrift1">Program of the festival</h1>
      <p class="tekst1">We are proud to present the official program for the <br /> 2023 edition of Copenhagen Sakura Festival!</p>
      <div class="bokse">
        <div class="boks1">
          <h2 class="overskrift1b1">Saturday</h2>
          <h2 class="overskrift2b1">22.04.2023</h2>
          <button class="button1">Show the program</button>
        </div>
        <div class="boks2">
          <h2 class="overskrift1b2">Sunday</h2>
          <h2 class="overskrift2b2">23.04.2023</h2>
          <button class="button2">Show the program</button>
        </div>
      </div>
    </main>

    <style>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      img {
        width: 100%;
        height: 100%;
        display: block;
      }

      ul#menu li {
        display: inline;
      }

      body {
        background-color: rgba(248, 236, 236, 1);
      }

      header {
        position: sticky;
        top: 0;
        padding: 1rem 2rem;
        box-shadow: 0 12px 28px 0 rgb(0 0 0 / 30%);
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        padding: 10px;
        padding-left: 10px;
        background-color: #d3726b;
        z-index: 1;
      }
      header nav ul {
        display: flex;
        justify-content: space-between;
        margin: 0;
        padding: 0;
        padding-bottom: 5px;
        gap: 35px;
        overflow-x: auto;
      }

      a {
        text-decoration: none;
        font-weight: 700;
        color: #171717;
        font-family: "Quicksand";
        font-size: 18px;
        padding: 10px;
      }

      a:hover {
        color: #646464;
      }

      .logo {
        width: 35%;
      }

      .icon {
        width: 4%;
      }

      @media (min-width: 600px) {
        #grid_menu {
          display: grid;
          grid-template-columns: 1fr 1fr;
          align-items: center;
        }
      }

      .overskrift1 {
        text-align: center;
        font-family: "Quicksand,bold";
        padding-top: 86px;
        font-size: 48px;
      }

      .tekst1 {
        font-family: "Quicksand";
        text-align: center;
        padding-top: 30px;
        font-size: 21px;
      }

      .bokse {
        display: grid;
        grid-template-columns: 1fr 1fr;
        text-align: center;
        font-family: "Quicksand";
        padding-top: 90px;
        padding-left: 50px;
        color: rgba(161, 67, 67, 1);
        margin-left: 95px;
      }

      .boks1 {
        background-color: rgba(234, 225, 225, 1);
        width: 68%;
        height: 240px;
        padding: 5px;
        border-radius: 2px;
      }

      .boks2 {
        background-color: rgba(234, 225, 225, 1);
        width: 68%;
        height: 240px;
        padding: 5px;
        border-radius: 2px;
      }

      .button1 {
        color: white;
        background-color: #156b4c;
        font-family: "Quicksand";
        appearance: none;
        border-radius: 10px;
        border-style: none;
        box-sizing: border-box;
        color: #fff;
        cursor: pointer;
        display: inline-block;
        font-size: 15px;
        font-weight: 500;
        height: 50px;
        padding: 15px 31px;
        position: relative;
        text-align: center;
      }

      .button2 {
        color: white;
        background-color: #156b4c;
        font-family: "Quicksand";
        appearance: none;
        border-radius: 10px;
        border-style: none;
        box-sizing: border-box;
        color: #fff;
        cursor: pointer;
        display: inline-block;
        font-size: 15px;
        font-weight: 500;
        height: 50px;
        padding: 15px 31px;
        position: relative;
        text-align: center;
      }

      .overskrift1b1 {
        padding-top: 40px;
        font-size: 26px;
      }

      .overskrift1b2 {
        padding-top: 40px;
        font-size: 26px;
      }

      .overskrift2b1 {
        padding-top: 8px;
        padding-bottom: 35px;
        font-size: 26px;
      }

      .overskrift2b2 {
        padding-top: 8px;
        padding-bottom: 35px;
        font-size: 26px;
      }
    </style>
  </body>
</html>
