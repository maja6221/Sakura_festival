      opacity: 1;
    }
  
    [data-index="4"] {
      left: 85%;
      opacity: 1;
    }
  
    [data-index="5"] {
      left: 120%;
      opacity: 0;
    }

    [data-index="6"] {
        left: 145%;
        opacity: 0;
      }

      [data-index="7"] {
        left: 170%;
        opacity: 0;
      }

